{
  "name": "copilot-router",
  "version": "1.1.0",
  "description": "GitHub Copilot API with OpenAI, Anthropic, and Gemini compatibility",
  "type": "module",
  "main": "./dist/main.js",
  "bin": {
    "copilot-router": "./dist/cli.js"
  },
  "files": [
    "dist",
    "public",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "start": "tsx src/main.ts",
    "typecheck": "tsc --noEmit",
    "build": "tsc && tsc-alias --resolve-full-paths && node scripts/post-build.cjs",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "github",
    "copilot",
    "openai",
    "anthropic",
    "gemini",
    "api",
    "proxy",
    "router"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ShengM97/copilot-router.git"
  },
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-openapi": "^0.18.4",
    "commander": "^12.1.0",
    "consola": "^3.4.0",
    "dotenv": "^17.2.3",
    "fetch-event-stream": "^0.1.5",
    "hono": "^4.6.16",
    "mssql": "^11.0.1",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/mssql": "^9.1.8",
    "@types/node": "^22.10.5",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
